@model IEnumerable<VFT.OCT.Models.VFTreport>

@{
    ViewData["Title"] = "ViewReportVFT";
}

<h2 style="text-align:center;">Summary Report</h2>
<br />

<p>
    <a asp-action="Create" style="text-decoration:none; text-align:center;background-color:darkgoldenrod;
width:40%; border-radius: 10px;padding:5px; font-weight:bolder; color:white;">Go Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Doctor
            </th>
           @* <th>
                Facility
            </th>
*@            <th>
                Total VFT Referrals
            </th>
            <th>
                Amount in GHS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @Html.DisplayFor(modelItem => item.referredDrName)
                </td>
@*                <td>
                    @Html.DisplayFor(modelItem => item.reFfacility)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TotalVFTReferrals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>

            </tr>
        }

</tbody>
</table>
